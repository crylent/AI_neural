<UserControl x:Class="AI_neural.UI.SampleListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="40" Width="240"
             d:DesignHeight="40" d:DesignWidth="240">
    <DockPanel>
        <TextBlock x:Name="Text" VerticalAlignment="Center" FontSize="20" Margin="5,0" HorizontalAlignment="Left">Sample</TextBlock>
        <StackPanel Height="40" Orientation="Horizontal" HorizontalAlignment="Right">
            <Image x:Name="Checked" Source="/Icons/checked.png" Visibility="Collapsed"/>
            <Button Width="40" Height="40" Click="OnRename">
                <Image Source="/Icons/edit.png"/>
            </Button>
            <Button Width="40" Height="40" Click="OnRemove">
                <Image Source="/Icons/remove.png" Height="30"/>
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>
